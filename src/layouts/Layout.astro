---
import { ClientRouter } from 'astro:transitions';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <ClientRouter />
    <title>Fernando's Blog</title>
    <link 
      rel="preload" 
      href="/fonts/PixelifySans-Variable.woff2" 
      as="font" 
      type="font/woff2" 
      crossorigin
    />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: 'Pixelify Sans';
    src: url('/fonts/PixelifySans-Variable.woff2') format('woff2-variations');
    font-weight: 400 700; /* Ajusta esto seg√∫n el rango de weights que soporte tu fuente */
    font-display: swap;
  }

  :root {
    font-family: 'Pixelify Sans', system-ui, sans-serif;
  }

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
